<%= form_for(@portfolio) do |f| %>

  <% if @portfolio.errors.any? %>
    <% @portfolio.errors.full_messages.each do |error| %>
      <%= alert_generator error %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, class:'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :subtitle %><br>
    <%= f.text_field :subtitle, class:'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :body %><br>
    <%= f.text_area :body, class:'form-control', rows: 20 %>
  </div>

  <div class="form-group">
    <%= f.file_field :main_image, :class => 'form-control' %>
  </div>

  <!-- <div class="form-group">
    <%= f.file_field :thumb_image, :class => 'form-control' %>
  </div> -->

  <div class="actions">
    <%= f.submit "Submit", class: 'btn btn-primary' %>
  </div>
<% end %>
